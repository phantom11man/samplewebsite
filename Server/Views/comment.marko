        <div class="container">     
            <form class="form" action="/comment" method="POST">
                <h1 class="fontcolor">WE LOVE TO HEAR YOUR FEEDBACK!</h1>
                <div class="form-group">
                    <label class="fontcolor">Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Please write your name here"/>
                </div>
                <div class="form-group"> 
                    <label class="fontcolor">Comment</label>
                    <textarea name="comment" class="form-control" placeholder="Please write any suggestions or comments here"></textarea>
                </div>
                <div class="form-group"> 
                    <label class="fontcolor">Image</label>
                    <input type="text" name="image" class="form-control" placeholder="This part is optional but you can add the url of your picture"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
            <hr class="hr">
            <h1 class="fontcolor">${input.title}</h1>
            <!-- <ul class="fontcolor"> -->
            <for(comment in input.comments)>
                <div class="media borderc padding commentbox">
                <img class="mr-3 smallimage"  src="${comment.image}" onerror="this.src='/images/icon.png'" alt="">
                <div class="media-body">
                    <h4 class="mt-0">${comment.name}</h4>
                    ${comment.comment}
                </div>
                </div>
                <br>
            </for>  
            <!-- </ul> -->
        </div>  
    </body>
